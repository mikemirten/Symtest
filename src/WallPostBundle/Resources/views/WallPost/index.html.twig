{% extends "::base.html.twig" %}

{% block title %}Posts{% endblock %}

{% block body %}
	<div class="wall-posts">
	{% for post in posts %}
		<article>
			<h3>{{ post.title }}</h3>
			<p>{{ post.body }}</p>
			<span>{{ post.author }}</span>
		</article>
	{% endfor  %}
	</div>
	
	<div class="wall-addpost">
		{{ form(postForm) }}
	</div>
{% endblock %}
